<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="textInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/label</item>
        <item name="hintTextColor">@color/color3</item>
        <item name="boxStrokeColor">@color/color3</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>

    <style name="textInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
    </style>


    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
<!--        <item name="android:windowIsFloating">true</item>-->
<!--        <item name="android:windowNoTitle">true</item>-->
    </style>

    <style name="cardTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
</resources>